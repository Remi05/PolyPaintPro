{
    "compilerOptions": {
        "lib": [
            "es6",
            "es2015.promise",
            "dom"
        ],
        "module": "commonjs",
        "noImplicitAny": false,
        "outDir": "dist",
        "sourceMap": true,
        "target": "es2016",
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "**/*.ts",
        "spec/**/*.ts"
    ],
    "types": [
        "node",
        "jasmine",
        "supertest",
        "reflect-metadata"
    ]
}